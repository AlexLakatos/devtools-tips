---js
{
  getTags: function(collections) {
    const tags = [];
    for (const name in collections) {
      if (!name.startsWith('browser:') && name !== 'all') {
        tags.push(name);
      }
    }
    return tags.sort();
  },
  getBrowsers: function(collections) {
    const browsers = [];
    for (const name in collections) {
      if (name.startsWith('browser:')) {
        browsers.push(name);
      }
    }
    return browsers.sort();
  },
}
