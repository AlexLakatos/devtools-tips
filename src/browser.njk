---js
{
  title: "DevTools Tips",
  layout: "home.njk",
  templateEngineOverride: "njk",
  eleventyExcludeFromCollections: true,
  pagination: {
      data: "collections",
      size: 1,
      alias: "browser",
      before: function(data) {
        return data.filter(entry => entry.startsWith('browser:'));
      }
  },
  permalink: "browser/{{ browser | slug | processBrowserTagName }}/"
}
---
<main id="maincontent">
  <h2>Tips supported in {{ browser | processBrowserTagName }}</h2>
  {% include 'filter-tip-list.njk' %}
  <ul class="tips">
  {%- for post in collections[browser] | reverse -%}
    {% include 'tip-in-list.njk' %}
  {%- endfor -%}
  </ul>
</main>
